<%- include ("../partials/header.ejs") %>
<div class="container">
	<div class="row">
		
		<div class="col-md-12">
			<div class="border">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<a id="date">
						<%= campground.date.toString().substring(0,15) %>
					</a>
					<h2>
						<%= campground.name %>
					</h2>
					<p>
						<%- campground.description %>
					</p>
					<p>
						<em>Submitted By <a href="/users/<%= campground.author.id %>"><%= campground.author.username %></a></em>
					</p>
					<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
					<a class="btn btn-xs btn-warning icon" href="/blogs/<%= campground._id %>/edit"><i class="fas fa-edit"></i></a>
					<form id="deleteForm" method="post" action="/blogs/<%= campground._id %>?_method=DELETE">
						<button class="btn btn-xs btn-danger icon">
							<i class="fas fa-trash-alt"></i>
						</button>
					</form>
					<% } %>
				</div>
				<div class="well">
					<div class="text-right">
						<a class="btn btn-success" href="/blogs/<%=campground._id%>/comments/new">Add New Comment</a>
					</div>
					<hr>
					<% campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><a href="/users/<%= comment.author.id %>"><%= comment.author.fullname %></a></strong> 
							<span class="pull-right"><%= comment.date %></span>
							<p>
								<%= comment.text %>
							</p>
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
							<a class="btn btn-xs btn-warning icon" 
							   href="/blogs/<%= campground._id %>/comments/<%= comment._id %>/edit"><i class="fas fa-edit"></i></a>
							<form id="deleteForm" method="post" 
								  action="/blogs/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE">
								<button class="btn btn-xs btn-danger icon">
									<i class="fas fa-trash-alt"></i>
								</button>
							</form>
							<% } %>
						</div>
					</div>
					<% }) %>
				</div>
			</div>
		</div>
	</div>	
</div>
<h1>
</h1>

<%- include ("../partials/footer.ejs") %>