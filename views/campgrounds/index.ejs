<%- include ("../partials/header.ejs") %>
<div class="container">
	<div class="jumbotron">
		<h1>
			<i class="fas fa-blog"></i> Welcome To BloggerSite
		</h1>
		<p>
			You can enjoy the joy of reading here for free!
		</p> 
		<a href="/blogs/new" class="btn btn-primary">Add A New Blog </a>
	</div>
	<form action="/blogs/search" method="get" style="text-align:center;">
		<input type="text" name="search" placeholder="Search for a blog" class="searchbar">
		<button class="btn btn-primary" style="width:5%;height:42px;margin-bottom:5px;border-radius:0;">
			<i class="fa fa-search" aria-hidden="true"></i>
		</button>
	</form>
	<% if(s!=""){ %>
		<h2>
			You searched for: <%= s %>
		</h2>
	<% } %>
	<div class="row" style="display:flex; flex-wrap:wrap; ">
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-lg-12">
				<div class="thumbnail">
					<img src="<%= campground.image %>" class="inImg">
					<!-- <div class="caption" style="text-align:center;"> -->
						<div class="inf">
							<h4 style="font-weight:bold;">
							<%= campground.name %>
							</h4>
							<p>
								<em>Submitted By <%= campground.author.username %></em>
							</p>
							<p>
								<%- campground.description.substring(0,500) %>...
							</p>
						</div>
						<p>
							<a href="/blogs/<%= campground.id %>" class="btn btn-primary">Read More</a>
						</p>
					<!-- </div> -->
				</div>	
			</div>	
		<% }); %>
	</div>	
</div>
<%- include ("../partials/footer.ejs") %>
