<%- include('../partials/header') %>
<div class="container" style="width:30%">
	<h1 style="text-align: center">
		Creating a New Blog
	</h1>
	<div style= "width:65%, margin: 0 auto">
		<form action="/blogs" method="POST">
			<div class="form-group">
				<input type="textbox" placeholder="Name" name="cname" class="form-control">
			</div>
			<div class="form-group">
				<input type="textbox" placeholder="Image URL" name="image" class="form-control">
			</div>
			<div class="form-group">
				<textarea style="display:none;" id="spec" placeholder="Blog" rows="10" name="description" class="form-control"></textarea>
			</div>
						<div style="background-color:#c9c9c9">
				<button type="button" class="fontStyle" onclick="document.execCommand( 'bold',false,null);" title="Bold"><b>B</b>
				</button>
					<button type="button" class="fontStyle" onclick="document.execCommand('italic',false,null);" title="Italic"><i>I</i>
				</button>
				<button type="button" class="fontStyle" onclick="document.execCommand( 'underline',false,null);" title="Underline"><u>U</u>
				</button>
					<button type="button" class="fontStyle" onclick="document.execCommand( 'strikethrough');" title="Strike Through"><i class="fas fa-strikethrough"></i>
				</button>
					<button type="button" class="fontStyle" onclick="document.execCommand( 'insertOrderedList');" title="Ordered List"><i class="fas fa-list-ol"></i>
					</button>
					<button type="button" class="fontStyle" onclick="document.execCommand( 'insertUnorderedList');" title="Unordered List"><i class="fas fa-list-ul"></i>
					</button>
				</div>
			<div class="form-group">
				<div id="editor1" contenteditable="true" onkeyup="myFunc()" class="form-control" style="height:190px;overflow: scroll;">
				</div>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary btn-block">
			</div>
		</form>
	</div>
	<a href="/blogs">Go Back!</a>
</div>

<%- include ("../partials/footer.ejs") %>

